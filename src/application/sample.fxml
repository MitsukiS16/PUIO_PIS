<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="application.Controller"
            stylesheets="@application.css"
            style="-fx-background-color: #f0f4f7;">

    <top>
        <HBox style="-fx-padding: 15; -fx-background-color: #e6eef5;" alignment="CENTER">
            <HBox spacing="15" alignment="CENTER"
                  HBox.hgrow="ALWAYS"
                  style="
                      -fx-padding: 15;
                      -fx-background-color: #f7f9fc;
                      -fx-background-radius: 20;
                      -fx-border-radius: 20;
                      -fx-border-color: #d1d9e6;
                      -fx-border-width: 2;
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

                <Label text="Mines:" styleClass="mines-label"/>
                <Label text="0" styleClass="mines-label"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="Timer:" styleClass="timer-label"/>
                <Label text="0:00" styleClass="timer-label"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="Score:" styleClass="score-label"/>
                <Label text="0" styleClass="score-label"/>
            </HBox>
        </HBox>
    </top>

	<center>
	    <GridPane fx:id="gridPane" hgap="2" vgap="1"
	              style="-fx-background-color: #bdc3c7; -fx-border-radius: 15; -fx-background-radius: 15;"
	              alignment="CENTER"
	              GridPane.hgrow="ALWAYS"
	              GridPane.vgrow="ALWAYS"/>
	</center>

    <bottom>
        <HBox spacing="10" style="-fx-padding: 15; -fx-background-color: #e6eef5;" alignment="CENTER">
            <Button text="New Game" onAction="#handleNewGame" styleClass="game-button"/>
            <Button text="Reset" onAction="#handleReset" styleClass="game-button"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Help" onAction="#handleHelp" styleClass="game-button"/>
            <Button text="Custom Settings" onAction="#handleCustom" styleClass="game-button"/>
        </HBox>
    </bottom>

</BorderPane>